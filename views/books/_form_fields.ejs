<div>
  <label>Titre</label>
  <input type="text" name="title" value="<%=book.title%>" />
</div>
<div>
  <label>Auteur</label>
  <select name="author">
    <% authors.forEach(author => {%> <% if (author.id === book.author) {%>
    <option selected label="<%= author.name %>" value="<%= author.id %>">
      <% }else{ %>
    </option>
    <option label="<%= author.name %>" value="<%= author.id %>">
      <%}%> <%})%>
    </option>
  </select>
</div>
<div>
  <label>Date de Publication</label>
  <input
    type="date"
    name="publishDate"
    value="<%=book.publishDate == null ? '': 
            book.publishDate.toISOString().split('T')[0]%>"
  />
</div>
<div>
  <label>Nombre de Pages</label>
  <input type="number" name="pageCount" min="1" value="<%=book.pageCount%>" />
</div>
<div>
  <label>Couverture</label>
  <input type="file" name="cover" class="filepond" />
</div>
<div>
  <label>Description</label>
  <textarea name="description"><%= book.description %></textarea>
</div>
